<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:RubikCube.Maui.Controls"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
             x:Class="RubikCube.Maui.MainPage"
             Title="Rubik's Cube 4D Solver">

    <Grid ColumnDefinitions="400,*" RowDefinitions="*">

        <!-- Left Panel - Controls -->
        <ScrollView Grid.Column="0" Padding="10">
            <VerticalStackLayout Spacing="10">

                <!-- Control Buttons -->
                <HorizontalStackLayout Spacing="5">
                    <Button x:Name="ShuffleBtn" Text="Shuffle" Clicked="OnShuffleClicked" WidthRequest="80" />
                    <Button x:Name="SolveBtn" Text="Solve!" Clicked="OnSolveClicked" WidthRequest="80" />
                    <Button x:Name="PauseBtn" Text="Pause" Clicked="OnPauseClicked" WidthRequest="80" />
                </HorizontalStackLayout>

                <!-- Size Control -->
                <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                    <Label Text="Cube Size:" VerticalOptions="Center" />
                    <Entry x:Name="SizeEntry" Text="3" Keyboard="Numeric" WidthRequest="60" />
                    <Button Text="Apply" Clicked="OnSizeChanged" WidthRequest="70" />
                </HorizontalStackLayout>

                <!-- Transparency Toggle -->
                <HorizontalStackLayout Spacing="10">
                    <Label Text="Transparency:" VerticalOptions="Center" />
                    <CheckBox x:Name="TransparencyBox" CheckedChanged="OnTransparencyChanged" />
                </HorizontalStackLayout>

                <!-- Statistics -->
                <Frame BorderColor="Gray" Padding="10">
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="5">
                        <Label Text="Error:" Grid.Row="0" Grid.Column="0" />
                        <Label x:Name="ErrorLabel" Text="0" Grid.Row="0" Grid.Column="1" />

                        <Label Text="Time:" Grid.Row="1" Grid.Column="0" />
                        <Label x:Name="TimeLabel" Text="00:00:00" Grid.Row="1" Grid.Column="1" />

                        <Label Text="Moves:" Grid.Row="2" Grid.Column="0" />
                        <Label x:Name="MovesLabel" Text="0" Grid.Row="2" Grid.Column="1" />

                        <Label Text="Solutions:" Grid.Row="3" Grid.Column="0" />
                        <Label x:Name="SolutionLabel" Text="0" Grid.Row="3" Grid.Column="1" />

                        <Label Text="GA Iterations:" Grid.Row="4" Grid.Column="0" />
                        <Label x:Name="GACountLabel" Text="0" Grid.Row="4" Grid.Column="1" />
                    </Grid>
                </Frame>

                <!-- Fitness Chart -->
                <Frame BorderColor="Gray" Padding="5">
                    <lvc:CartesianChart x:Name="FitnessChart"
                                        HeightRequest="200"
                                        Series="{Binding Series}"
                                        XAxes="{Binding XAxes}"
                                        YAxes="{Binding YAxes}" />
                </Frame>

                <!-- Iteration Time -->
                <Label x:Name="IterTimeLabel" Text="Iter time: 0ms" />

            </VerticalStackLayout>
        </ScrollView>

        <!-- Right Panel - Cube View (Native GPU rendering: Metal on macOS, OpenGL on Windows) -->
        <controls:NativeCubeView x:Name="CubeViewControl"
                                 Grid.Column="1"
                                 BackgroundColor="DarkSlateGray">
            <controls:NativeCubeView.GestureRecognizers>
                <PanGestureRecognizer PanUpdated="OnCubeViewPanUpdated" />
                <PinchGestureRecognizer PinchUpdated="OnCubeViewPinchUpdated" />
            </controls:NativeCubeView.GestureRecognizers>
        </controls:NativeCubeView>

    </Grid>
</ContentPage>
